+import 'package:cloud_firestore/cloud_firestore.dart';
+import 'package:firebase_auth/firebase_auth.dart';
+import '../../../config/constants.dart';
+import '../../utils/logger.dart';
+
+/// Enum for available invoice templates
+enum InvoiceTemplate {
+  minimal,
+  classic,
+  modern,
+}
+
+extension InvoiceTemplateExt on InvoiceTemplate {
+  String get id {
+    switch (this) {
+      case InvoiceTemplate.minimal:
+        return 'minimal';
+      case InvoiceTemplate.classic:
+        return 'classic';
+      case InvoiceTemplate.modern:
+        return 'modern';
+    }
+  }
+
+  String get name {
+    switch (this) {
+      case InvoiceTemplate.minimal:
+        return 'Minimal';
+      case InvoiceTemplate.classic:
+        return 'Classic';
+      case InvoiceTemplate.modern:
+        return 'Modern';
+    }
+  }
+
+  String get description {
+    switch (this) {
+      case InvoiceTemplate.minimal:
+        return 'Clean, simple design - essential info only';
+      case InvoiceTemplate.classic:
+        return 'Professional traditional design - complete details';
+      case InvoiceTemplate.modern:
+        return 'Contemporary design - premium appearance';
+    }
+  }
+}
+
+/// Service for managing invoice templates
+class InvoiceTemplateService {
+  static final InvoiceTemplateService _instance = InvoiceTemplateService._internal();
+
+  factory InvoiceTemplateService() {
+    return _instance;
+  }
+
+  InvoiceTemplateService._internal();
+
+  final FirebaseFirestore _firestore = FirebaseFirestore.instance;
+  final FirebaseAuth _auth = FirebaseAuth.instance;
+
+  /// Get the selected template for current user
+  Future<InvoiceTemplate> getSelectedTemplate() async {
+    try {
+      final user = _auth.currentUser;
+      if (user == null) {
+        logWarning('getSelectedTemplate: No authenticated user');
+        return InvoiceTemplate.classic;
+      }
+
+      final doc = await _firestore
+          .collection(FirestoreCollections.users)
+          .doc(user.uid)
+          .collection(FirestoreCollections.businessSub)
+          .doc('settings')
+          .get();
+
+      if (!doc.exists) {
+        return InvoiceTemplate.classic;
+      }
+
+      final templateId = doc.data()?['invoiceTemplate'] as String? ?? 'classic';
+      return _templateFromId(templateId);
+    } catch (e) {
+      logError('getSelectedTemplate', e);
+      return InvoiceTemplate.classic;
+    }
+  }
+
+  /// Save selected template for current user
+  Future<void> saveSelectedTemplate(InvoiceTemplate template) async {
+    try {
+      final user = _auth.currentUser;
+      if (user == null) {
+        throw Exception('No authenticated user');
+      }
+
+      await _firestore
+          .collection(FirestoreCollections.users)
+          .doc(user.uid)
+          .collection(FirestoreCollections.businessSub)
+          .doc('settings')
+          .set({
+        'invoiceTemplate': template.id,
+        'updatedAt': FieldValue.serverTimestamp(),
+      }, SetOptions(merge: true));
+
+      logInfo('saveSelectedTemplate', 'Saved template: ${template.id}');
+    } catch (e) {
+      logError('saveSelectedTemplate', e);
+      rethrow;
+    }
+  }
+
+  /// Watch template changes in real-time
+  Stream<InvoiceTemplate> watchTemplate() {
+    final user = _auth.currentUser;
+    if (user == null) {
+      return Stream.value(InvoiceTemplate.classic);
+    }
+
+    return _firestore
+        .collection(FirestoreCollections.users)
+        .doc(user.uid)
+        .collection(FirestoreCollections.businessSub)
+        .doc('settings')
+        .snapshots()
+        .map((doc) {
+      if (!doc.exists) {
+        return InvoiceTemplate.classic;
+      }
+
+      final templateId = doc.data()?['invoiceTemplate'] as String? ?? 'classic';
+      return _templateFromId(templateId);
+    }).handleError((e) {
+      logError('watchTemplate', e);
+      return InvoiceTemplate.classic;
+    });
+  }
+
+  /// Get all available templates
+  List<InvoiceTemplate> getAvailableTemplates() {
+    return InvoiceTemplate.values;
+  }
+
+  /// Convert template ID string to enum
+  InvoiceTemplate _templateFromId(String id) {
+    switch (id) {
+      case 'minimal':
+        return InvoiceTemplate.minimal;
+      case 'modern':
+        return InvoiceTemplate.modern;
+      case 'classic':
+      default:
+        return InvoiceTemplate.classic;
+    }
+  }
+}
