+import 'package:flutter/foundation.dart';
+import '../services/invoice/invoice_template_service.dart';
+
+/// Provider for managing invoice template state
+class TemplateProvider extends ChangeNotifier {
+  final InvoiceTemplateService _service = InvoiceTemplateService();
+
+  InvoiceTemplate _selectedTemplate = InvoiceTemplate.classic;
+  bool _isLoading = true;
+
+  InvoiceTemplate get selectedTemplate => _selectedTemplate;
+  bool get isLoading => _isLoading;
+
+  TemplateProvider() {
+    _initialize();
+  }
+
+  /// Initialize provider by loading selected template
+  Future<void> _initialize() async {
+    _isLoading = true;
+    notifyListeners();
+
+    try {
+      _selectedTemplate = await _service.getSelectedTemplate();
+    } catch (e) {
+      _selectedTemplate = InvoiceTemplate.classic;
+    }
+
+    _isLoading = false;
+    notifyListeners();
+  }
+
+  /// Set template locally and save to Firestore
+  Future<void> setTemplate(InvoiceTemplate template) async {
+    _selectedTemplate = template;
+    notifyListeners();
+
+    try {
+      await _service.saveSelectedTemplate(template);
+    } catch (e) {
+      // Revert on error
+      await refresh();
+      rethrow;
+    }
+  }
+
+  /// Refresh template from Firestore
+  Future<void> refresh() async {
+    try {
+      _selectedTemplate = await _service.getSelectedTemplate();
+      notifyListeners();
+    } catch (e) {
+      _selectedTemplate = InvoiceTemplate.classic;
+      notifyListeners();
+    }
+  }
+
+  /// Watch for template changes in real-time
+  Stream<InvoiceTemplate> watchTemplate() {
+    return _service.watchTemplate();
+  }
+
+  /// Get list of available templates
+  List<InvoiceTemplate> getAvailableTemplates() {
+    return _service.getAvailableTemplates();
+  }
+}
