+
+class TemplateGalleryScreen extends StatefulWidget {
+  const TemplateGalleryScreen({Key? key}) : super(key: key);
+
+  @override
+  State<TemplateGalleryScreen> createState() => _TemplateGalleryScreenState();
+}
+
+class _TemplateGalleryScreenState extends State<TemplateGalleryScreen> {
+  String? _selectedTemplate;
+  bool _saving = false;
+
+  @override
+  void initState() {
+    super.initState();
+    final provider = Provider.of<BrandingProvider>(context, listen: false);
+    _selectedTemplate = provider.getTemplateId() ?? BrandingProvider.TEMPLATE_CLASSIC;
+  }
+
+  Future<void> _saveTemplate() async {
+    if (_selectedTemplate == null) return;
+    
+    final uid = FirebaseAuth.instance.currentUser!.uid;
+    setState(() => _saving = true);
+    
+    try {
+      final provider = Provider.of<BrandingProvider>(context, listen: false);
+      await provider.selectTemplate(uid, _selectedTemplate!);
+      
+      if (mounted) {
+        ScaffoldMessenger.of(context).showSnackBar(
+          SnackBar(content: Text('Template "$_selectedTemplate" selected')),
+        );
+      }
+    } catch (e) {
+      if (mounted) {
+        ScaffoldMessenger.of(context).showSnackBar(
+          SnackBar(content: Text('Error: $e'), backgroundColor: Colors.red),
+        );
+      }
+    } finally {
+      if (mounted) setState(() => _saving = false);
+    }
+  }
+
+  @override
+  Widget build(BuildContext context) {
+    return Scaffold(
+      appBar: AppBar(title: const Text('Invoice Templates')),
+      body: SingleChildScrollView(
+        padding: const EdgeInsets.all(16),
+        child: Column(
+          crossAxisAlignment: CrossAxisAlignment.start,
+          children: [
+            const Text('Select a template for your invoices', style: TextStyle(fontSize: 14, color: Colors.grey)),
+            const SizedBox(height: 24),
+            GridView.builder(
+              shrinkWrap: true,
+              physics: const NeverScrollableScrollPhysics(),
+              gridDelegate: const SliverGridDelegateWithFixedCrossAxisCount(
+                crossAxisCount: 2,
+                crossAxisSpacing: 16,
+                mainAxisSpacing: 16,
+                childAspectRatio: 0.85,
+              ),
+              itemCount: BrandingProvider.availableTemplates.length,
+              itemBuilder: (context, index) {
+                final template = BrandingProvider.availableTemplates[index];
+                final isSelected = _selectedTemplate == template;
+                
+                return _buildTemplateCard(template, isSelected);
+              },
+            ),
+            const SizedBox(height: 32),
+            SizedBox(
+              width: double.infinity,
+              child: ElevatedButton(
+                onPressed: _saving ? null : _saveTemplate,
+                style: ElevatedButton.styleFrom(
+                  padding: const EdgeInsets.symmetric(vertical: 16),
+                  backgroundColor: Colors.blue,
+                ),
+                child: _saving
+                    ? const SizedBox(
+                        height: 20,
+                        width: 20,
+                        child: CircularProgressIndicator(color: Colors.white, strokeWidth: 2),
+                      )
+                    : const Text(
+                        'Apply Template',
+                        style: TextStyle(fontSize: 16, fontWeight: FontWeight.bold, color: Colors.white),
+                      ),
+              ),
+            ),
+          ],
+        ),
+      ),
+    );
+  }
+
+  Widget _buildTemplateCard(String templateId, bool isSelected) {
+    final Map<String, Map<String, dynamic>> templateDetails = {
+      BrandingProvider.TEMPLATE_CLASSIC: {
+        'title': 'Classic',
+        'description': 'Traditional professional style',
+        'icon': Icons.description,
+        'color': Colors.blue,
+      },
+      BrandingProvider.TEMPLATE_MODERN: {
+        'title': 'Modern',
+        'description': 'Contemporary design',
+        'icon': Icons.trending_up,
+        'color': Colors.purple,
+      },
+      BrandingProvider.TEMPLATE_MINIMAL: {
+        'title': 'Minimal',
+        'description': 'Clean and simple',
+        'icon': Icons.square,
+        'color': Colors.grey,
+      },
+      BrandingProvider.TEMPLATE_ELEGANT: {
+        'title': 'Elegant',
+        'description': 'Premium sophisticated look',
+        'icon': Icons.diamond,
+        'color': Colors.amber,
+      },
+      BrandingProvider.TEMPLATE_BUSINESS: {
+        'title': 'Business',
+        'description': 'Corporate standard',
+        'icon': Icons.business,
+        'color': Colors.indigo,
+      },
+    };
+
+    final details = templateDetails[templateId] ?? {};
+
+    return GestureDetector(
+      onTap: () {
+        setState(() => _selectedTemplate = templateId);
+      },
+      child: Container(
+        decoration: BoxDecoration(
+          border: Border.all(
+            color: isSelected ? (details['color'] as Color?) ?? Colors.blue : Colors.grey[300]!,
+            width: isSelected ? 3 : 1,
+          ),
+          borderRadius: BorderRadius.circular(12),
+          color: isSelected ? (details['color'] as Color?)?.withOpacity(0.05) : Colors.white,
+        ),
+        child: Padding(
+          padding: const EdgeInsets.all(16),
+          child: Column(
+            mainAxisAlignment: MainAxisAlignment.center,
+            children: [
+              Container(
+                padding: const EdgeInsets.all(12),
+                decoration: BoxDecoration(
+                  color: (details['color'] as Color?)?.withOpacity(0.2) ?? Colors.blue.withOpacity(0.2),
+                  shape: BoxShape.circle,
+                ),
+                child: Icon(
+                  details['icon'] as IconData? ?? Icons.description,
+                  size: 32,
+                  color: details['color'] as Color? ?? Colors.blue,
+                ),
+              ),
+              const SizedBox(height: 12),
+              Text(
+                details['title'] as String? ?? 'Template',
+                style: const TextStyle(fontSize: 14, fontWeight: FontWeight.bold),
+                textAlign: TextAlign.center,
+              ),
+              const SizedBox(height: 4),
+              Text(
+                details['description'] as String? ?? '',
+                style: TextStyle(fontSize: 12, color: Colors.grey[600]),
+                textAlign: TextAlign.center,
+              ),
+              const SizedBox(height: 8),
+              if (isSelected)
+                Container(
+                  padding: const EdgeInsets.symmetric(horizontal: 8, vertical: 4),
+                  decoration: BoxDecoration(
+                    color: details['color'] as Color? ?? Colors.blue,
+                    borderRadius: BorderRadius.circular(4),
+                  ),
+                  child: const Row(
+                    mainAxisSize: MainAxisSize.min,
+                    children: [
+                      Icon(Icons.check, size: 14, color: Colors.white),
+                      SizedBox(width: 4),
+                      Text('Selected', style: TextStyle(fontSize: 11, color: Colors.white, fontWeight: FontWeight.bold)),
+                    ],
+                  ),
+                ),
+            ],
+          ),
+        ),
+      ),
+    );
+  }
+}
