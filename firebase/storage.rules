rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Per-user inventory images: users/{uid}/inventory/{itemId}/*
    match /users/{userId}/inventory/{itemId}/{fileName} {
      allow read: if true; // public read, or restrict to auth if you want private images: request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: other app files
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
