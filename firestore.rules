rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId && !(request.resource.data.keys().hasAny(['auraBalance','roles']));
    }
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
